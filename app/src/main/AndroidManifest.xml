<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bank_app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_white">

        <activity android:name="com.example.bank_app.splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.bank_app.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.bank_app.user_list"
            android:screenOrientation="portrait"
            android:label="Banking system"
            android:theme="@style/AppTheme1">
        </activity>

        <activity android:name="com.example.bank_app.user_data"
            android:parentActivityName="com.example.bank_app.user_list"
            android:screenOrientation="portrait"
            android:label="User Details"
            android:theme="@style/AppTheme"/>

        <activity android:name="com.example.bank_app.sendtouser"
            android:screenOrientation="portrait"
            android:label="Transfer Money"
            android:theme="@style/AppTheme"/>

        <activity android:name="com.example.bank_app.history_list"
            android:parentActivityName="com.example.bank_app.user_list"
            android:screenOrientation="portrait"
            android:label="Transactions"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>